[project]
org='sce'
name='geisa-imx93'

[build]
command='./build.sh'
files='build/tmp/deploy/images/README.pdf'
archive='%Po-%Pn-$(scripts/get-version).tar.gz'
tar_options='-h'
tar_transform='yes'
flavors='sfl_ci debug devshell'

[sfl_ci]
command='./build.sh && \
    ./build.sh \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image'

[debug]
command='./build.sh \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image'

[devshell]
command='./build.sh \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image \
    -- /bin/bash'
