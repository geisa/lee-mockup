[project]
org='sce'
name='geisa-imx93'

[build]
command='./build.sh'
files='build/tmp/deploy/images/README.pdf'
archive='%Po-%Pn-$(scripts/get-version).tar.gz'
tar_options='-h'
tar_transform='yes'
flavors='sfl_ci debug devshell imx93-evk imx93-evk-debug'

[sfl_ci]
command='./build.sh && \
    ./build.sh \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image \
    && ./build.sh -m geisa-imx93-evk \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image'

[debug]
command='./build.sh \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image'

[devshell]
command='./build.sh \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image \
    -- /bin/bash'

[imx93-evk]
command='./build.sh \
    -m geisa-imx93-evk'

[imx93-evk-debug]
command='./build.sh \
    -m geisa-imx93-evk \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image'

[imx95-evk]
command='./build.sh \
    -m geisa-imx95-evk'

[imx95-evk-debug]
command='./build.sh \
    -m geisa-imx95-evk \
    --distro geisa-imx93-dbg \
    -i geisa-imx93-dbg-image'