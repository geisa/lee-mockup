[project]
org='sce'
name='geisa-imx93'

[build]
command='./build.sh'
files='build/tmp/deploy/images/README.pdf'
archive='%Po-%Pn-$(scripts/get-version).tar.gz'
tar_options='-h'
tar_transform='yes'
flavors='sfl_ci dev devshell imx93-evk imx93-evk-dev imx95-evk imx95-evk-dev'

[sfl_ci]
command='./build.sh && \
    ./build.sh \
    --distro geisa-dev \
    -i geisa-dev-image \
    && ./build.sh -m geisa-imx93-evk \
    --distro geisa-dev \
    -i geisa-dev-image'

[dev]
command='./build.sh \
    --distro geisa-dev \
    -i geisa-dev-image'

[devshell]
command='./build.sh \
    --distro geisa-dev \
    -i geisa-dev-image \
    -- /bin/bash'

[imx93-evk]
command='./build.sh \
    -m geisa-imx93-evk'

[imx93-evk-dev]
command='./build.sh \
    -m geisa-imx93-evk \
    --distro geisa-dev \
    -i geisa-dev-image'

[imx95-evk]
command='./build.sh \
    -m geisa-imx95-evk'

[imx95-evk-dev]
command='./build.sh \
    -m geisa-imx95-evk \
    --distro geisa-dev \
    -i geisa-dev-image'